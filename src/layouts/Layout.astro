---
import Links from '../components/Links.astro';
const isHome = Astro.routePattern === '/'

---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<header>
			<h1><code>astro-word-loader</code></h1>
			{!isHome ? <a href="/">Return home</a> : ''}
		</header>
		<main>
			{isHome ? <Links /> : ''}
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
	}
	header, main {
		max-width: 60ch;
		margin-inline: auto;
	}
	main {
		padding-top: 5rem;
	}
	header {
		display: flex;
		flex-gap: 1rem;
		justify-content: space-between;
		align-items: center;
		position: fixed;
		left: 0;
		right: 0;
		top: 0;
		background-color: #fff;
	}
	:global(img) {
		max-width: 100%;
		height: auto;
	}
</style>
